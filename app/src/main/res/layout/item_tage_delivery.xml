        android:layout_marginEnd="@dimen/dimens_8dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>